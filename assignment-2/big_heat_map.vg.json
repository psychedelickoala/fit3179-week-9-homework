{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Predicted Increase in Mean Temperature",
        "subtitle": "Predicted change in mean temperature from 1986-2005 average.",
        "fontSize": 20,
        "subtitleFontSize": 16
    },
    "config": {
        "font": "Libre Baskerville"
    },
    "width": 1100,
    "height": 800,
    "params": [
        {
            "name": "yearselection", 
            "value": 2020,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2080,
                "step": 5
            }
        }
    ],
    "projection": {"type": "equirectangular"},
    "layer": [
        {
            "data": {
                "url":"temp-data/processed_tas_annual.csv"
            },

            "transform": [
                {
                    "filter": "datum.year_start==yearselection"
                }
            ],
            "mark": {"type": "rect", "width":7, "height": 8},
            "encoding": {
                "longitude": {"field": "lon", "type":"quantitative"},
                "latitude": {"field": "lat", "type":"quantitative"},
                "color": {
                    "field": "temp-change",
                    "type": "quantitative",
                    "title": "Increase in mean temperature (°C)",
                    "scale": {
                        "scheme": "goldorange",
                        "domainMin": 0,
                        "domainMax": 3
                    },
                    "legend": {
                        "orient": "bottom", 
                        "titleAnchor":"middle",
                        "gradientLength": 1100,
                        "gradientThickness": 30,
                        "tickCount": 8,
                        "titleFontSize": 16,
                        "titleFont": "arial",
                        "titleLimit": 800
                    }
                },
                "tooltip": [
                    {
                        "field": "temp-change",
                        "format": ".2f",
                        "title": "Increase (°C)"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "shape-data/big-map.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_graticules_5"}

            },
            "mark": {"type": "geoshape", "fill":null, "stroke":"lightgray"}
        },
        {
            "data": {
                "url": "shape-data/big-map.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}

            },
            "mark": {"type": "geoshape", "fill":null, "stroke":"black"}
        }


    ]

    
}
